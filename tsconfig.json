{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Changed to 'react-jsx' for React 17+
    "incremental": true,
    "paths": {
      "~/*": ["./*", "./.eslintrc.js"],
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "postcss.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Optionally added for clarity
    "**/*.jsx" // Optionally added for clarity
  ],
  "exclude": ["build", "node_modules", "./eslintrc.js"]
}
